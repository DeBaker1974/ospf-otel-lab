receivers:
  # CSR28 Interface Metrics
  snmp/csr28_interface:
    endpoint: udp://172.20.20.28:161
    version: v2c
    community: public
    collection_interval: 30s
    resource_attributes:
      host.name:
        scalar_oid: "1.3.6.1.2.1.1.5.0"
    attributes:
      if.name:
        oid: "1.3.6.1.2.1.31.1.1.1.1"
      if.descr:
        oid: "1.3.6.1.2.1.2.2.1.2"
      if.index:
        indexed_value_prefix: ""
    metrics:
      network.interface.in.bytes:
        unit: By
        sum:
          value_type: int
          monotonic: true
          aggregation: cumulative
        column_oids:
          - oid: "1.3.6.1.2.1.31.1.1.1.6"
            attributes:
              - name: if.name
              - name: if.descr
              - name: if.index
            resource_attributes:
              - host.name
      network.interface.out.bytes:
        unit: By
        sum:
          value_type: int
          monotonic: true
          aggregation: cumulative
        column_oids:
          - oid: "1.3.6.1.2.1.31.1.1.1.10"
            attributes:
              - name: if.name
              - name: if.descr
              - name: if.index
            resource_attributes:
              - host.name
      network.interface.in.errors:
        unit: "{errors}"
        sum:
          value_type: int
          monotonic: true
          aggregation: cumulative
        column_oids:
          - oid: "1.3.6.1.2.1.2.2.1.14"
            attributes:
              - name: if.name
              - name: if.descr
              - name: if.index
            resource_attributes:
              - host.name
      network.interface.out.errors:
        unit: "{errors}"
        sum:
          value_type: int
          monotonic: true
          aggregation: cumulative
        column_oids:
          - oid: "1.3.6.1.2.1.2.2.1.20"
            attributes:
              - name: if.name
              - name: if.descr
              - name: if.index
            resource_attributes:
              - host.name

  # CSR28 System Metrics
  snmp/csr28_system:
    endpoint: udp://172.20.20.28:161
    version: v2c
    community: public
    collection_interval: 60s
    resource_attributes:
      host.name:
        scalar_oid: "1.3.6.1.2.1.1.5.0"
    metrics:
      system.uptime:
        unit: s
        gauge:
          value_type: double
        scalar_oids:
          - oid: "1.3.6.1.2.1.25.1.1.0"
            resource_attributes:
              - host.name

  # LLDP from CSR23
  snmp/csr23_lldp:
    endpoint: udp://172.20.20.23:161
    version: v2c
    community: public
    collection_interval: 60s
    resource_attributes:
      host.name:
        scalar_oid: "1.3.6.1.2.1.1.5.0"
    attributes:
      lldp.local.port:
        indexed_value_prefix: "port-"
      lldp.remote.chassis.id:
        oid: "1.0.8802.1.1.2.1.4.1.1.5"
      lldp.remote.port.id:
        oid: "1.0.8802.1.1.2.1.4.1.1.7"
      lldp.remote.system.name:
        oid: "1.0.8802.1.1.2.1.4.1.1.9"
    metrics:
      lldp.neighbor.count:
        unit: "{neighbors}"
        gauge:
          value_type: int
        column_oids:
          - oid: "1.0.8802.1.1.2.1.4.1.1.4"
            attributes:
              - name: lldp.local.port
              - name: lldp.remote.chassis.id
              - name: lldp.remote.port.id
              - name: lldp.remote.system.name
            resource_attributes:
              - host.name

processors:
  # Data stream attributes for interface metrics
  resource/interface:
    attributes:
      - key: data_stream.type
        value: metrics
        action: upsert
      - key: data_stream.dataset
        value: interface
        action: upsert
      - key: data_stream.namespace
        value: prod
        action: upsert

  # Data stream attributes for system metrics
  resource/system:
    attributes:
      - key: data_stream.type
        value: metrics
        action: upsert
      - key: data_stream.dataset
        value: system
        action: upsert
      - key: data_stream.namespace
        value: prod
        action: upsert

  # Data stream attributes for LLDP metrics
  resource/lldp:
    attributes:
      - key: data_stream.type
        value: metrics
        action: upsert
      - key: data_stream.dataset
        value: lldp
        action: upsert
      - key: data_stream.namespace
        value: prod
        action: upsert

  batch:
    timeout: 10s
    send_batch_size: 100

exporters:
  # EDOT uses elasticsearch exporter with dynamic index
  elasticsearch/interface:
    endpoints:
      - "${env:ELASTIC_ENDPOINT}"
    api_key: "${env:ELASTIC_API_KEY}"
    logs_dynamic_index:
      enabled: true
    metrics_dynamic_index:
      enabled: true

  elasticsearch/system:
    endpoints:
      - "${env:ELASTIC_ENDPOINT}"
    api_key: "${env:ELASTIC_API_KEY}"
    logs_dynamic_index:
      enabled: true
    metrics_dynamic_index:
      enabled: true

  elasticsearch/lldp:
    endpoints:
      - "${env:ELASTIC_ENDPOINT}"
    api_key: "${env:ELASTIC_API_KEY}"
    logs_dynamic_index:
      enabled: true
    metrics_dynamic_index:
      enabled: true

  debug:
    verbosity: detailed
    sampling_initial: 5
    sampling_thereafter: 200

service:
  pipelines:
    metrics/interface:
      receivers:
        - snmp/csr28_interface
      processors:
        - resource/interface
        - batch
      exporters:
        - elasticsearch/interface
        - debug

    metrics/system:
      receivers:
        - snmp/csr28_system
      processors:
        - resource/system
        - batch
      exporters:
        - elasticsearch/system
        - debug

    metrics/lldp:
      receivers:
        - snmp/csr23_lldp
      processors:
        - resource/lldp
        - batch
      exporters:
        - elasticsearch/lldp
        - debug

  telemetry:
    logs:
      level: info

# ============================================
# SERVICE - Separate pipelines per metric type
# ============================================
service:
  pipelines:
    # System metrics pipeline (all routers)
    metrics/system:
      receivers:
        - snmp/csr23_system
        - snmp/csr24_system
        - snmp/csr25_system
        - snmp/csr26_system
        - snmp/csr27_system
        - snmp/csr28_system
        - snmp/csr29_system
      processors:
        - resource/system
        - batch
      exporters:
        - elasticsearch/system
        - debug
    
    # Memory metrics pipeline (csr28 only - full monitoring)
    metrics/memory:
      receivers:
        - snmp/csr28_memory
      processors:
        - resource/memory
        - batch
      exporters:
        - elasticsearch/memory
        - debug
    
    # Interface metrics pipeline (all routers)
    metrics/interface:
      receivers:
        - snmp/csr23_interface
        - snmp/csr24_interface
        - snmp/csr25_interface
        - snmp/csr26_interface
        - snmp/csr27_interface
        - snmp/csr28_interface
        - snmp/csr29_interface
      processors:
        - resource/interface
        - batch
      exporters:
        - elasticsearch/interface
        - debug
    
    # IP stats pipeline (csr28 only)
    metrics/ipstats:
      receivers:
        - snmp/csr28_ipstats
      processors:
        - resource/ipstats
        - batch
      exporters:
        - elasticsearch/ipstats
        - debug
    
    # TCP metrics pipeline (csr28 only)
    metrics/tcp:
      receivers:
        - snmp/csr28_tcp
      processors:
        - resource/tcp
        - batch
      exporters:
        - elasticsearch/tcp
        - debug
    
    # UDP metrics pipeline (csr28 only)
    metrics/udp:
      receivers:
        - snmp/csr28_udp
      processors:
        - resource/udp
        - batch
      exporters:
        - elasticsearch/udp
        - debug
    
    # ARP metrics pipeline (csr28 only)
    metrics/arp:
      receivers:
        - snmp/csr28_arp
      processors:
        - resource/arp
        - batch
      exporters:
        - elasticsearch/arp
        - debug
    
    # LLDP metrics pipeline (all routers)
    metrics/lldp:
      receivers:
        - snmp/csr23_lldp
        - snmp/csr24_lldp
        - snmp/csr25_lldp
        - snmp/csr26_lldp
        - snmp/csr27_lldp
        - snmp/csr28_lldp
        - snmp/csr29_lldp
      processors:
        - resource/lldp
        - batch
      exporters:
        - elasticsearch/lldp
        - debug
  
  telemetry:
    logs:
      level: info

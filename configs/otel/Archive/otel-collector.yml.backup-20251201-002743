# ============================================
# PROCESSORS - Set data_stream.dataset per metric type
# ============================================
processors:
  # System metrics (uptime)
  resource/system:
    attributes:
      - { key: data_stream.type, action: upsert, value: metrics }
      - { key: data_stream.dataset, action: upsert, value: snmp.system }
      - { key: data_stream.namespace, action: upsert, value: prod }
  
  # Memory metrics
  resource/memory:
    attributes:
      - { key: data_stream.type, action: upsert, value: metrics }
      - { key: data_stream.dataset, action: upsert, value: snmp.memory }
      - { key: data_stream.namespace, action: upsert, value: prod }
  
  # Interface metrics
  resource/interface:
    attributes:
      - { key: data_stream.type, action: upsert, value: metrics }
      - { key: data_stream.dataset, action: upsert, value: snmp.interface }
      - { key: data_stream.namespace, action: upsert, value: prod }
  
  # IP statistics
  resource/ipstats:
    attributes:
      - { key: data_stream.type, action: upsert, value: metrics }
      - { key: data_stream.dataset, action: upsert, value: snmp.ipstats }
      - { key: data_stream.namespace, action: upsert, value: prod }
  
  # TCP metrics
  resource/tcp:
    attributes:
      - { key: data_stream.type, action: upsert, value: metrics }
      - { key: data_stream.dataset, action: upsert, value: snmp.tcp }
      - { key: data_stream.namespace, action: upsert, value: prod }
  
  # UDP metrics
  resource/udp:
    attributes:
      - { key: data_stream.type, action: upsert, value: metrics }
      - { key: data_stream.dataset, action: upsert, value: snmp.udp }
      - { key: data_stream.namespace, action: upsert, value: prod }
  
  # ARP metrics
  resource/arp:
    attributes:
      - { key: data_stream.type, action: upsert, value: metrics }
      - { key: data_stream.dataset, action: upsert, value: snmp.arp }
      - { key: data_stream.namespace, action: upsert, value: prod }
  
  # LLDP metrics
  resource/lldp:
    attributes:
      - { key: data_stream.type, action: upsert, value: metrics }
      - { key: data_stream.dataset, action: upsert, value: snmp.lldp }
      - { key: data_stream.namespace, action: upsert, value: prod }
  
  batch:
    timeout: 10s
    send_batch_size: 200

